<div class="col-md-4 col-md-offset-4">
    <h2>编辑记录</h2>

    <hr>
    <%= form_for @record do |f| %>

    <% if @record.errors.any? %>
    <ul>
      <% @record.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>

    设备名称
    <%= f.text_field :device_name %>
    <br>
    描述
    <br>
    <%= f.text_area :description %>
    <br>

    <%= f.submit "Submit", :disable_with => 'Submiting...' %>
    <% end %>

</div>
