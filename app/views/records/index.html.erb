<div class="col-md-12">
  <div class="record">
    <%= link_to("New record", new_record_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Device Name</td>
        <td>Description</td>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |record| %>
        <tr>
          <td>#</td>
          <td><%= link_to(record.device_name, record_path(record)) %></td>
          <td><%= record.description %></td>
          <td>
              <%= link_to("Edit", edit_record_path(record), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", record_path(record),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
