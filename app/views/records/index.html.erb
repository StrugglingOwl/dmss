<div class="col-md-12">
  <div class="record">
    <%= link_to("New record", new_record_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Device Name</td>
        <td>Description</td>
        <td>Creator</td>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => "record_item", :collection => @records, :as => :record %>
    </tbody>
  </table>

  <div class="text-center">
  <%= will_paginate @records %>
  </div>

</div>
