<div>
  <br>
<% if @query_string.blank? %>
    <div class="search-info-title">
      Sorry, The search content cannot be blank, please type sth. to search.
    </div>

  <% elsif @records.blank? %>
    <br>
    <h2 class="search-info-title">你要找的内容被外星人👽带走了</h2>
  <% else %>
    <h2 class="search-info-title"> Search with "<%= @query_string %>" </h2>
    <div class="search-result">

      <div class="row records-show0"></div>
      <div class="record-table">
        <% @records.each do |record| %>
        <div class="row records-show">

          <div class="col-md-12 col-lg-9 col-lg-offset-1">

            <div class="pull-right">
              创建时间：<%= record.created_at.to_date %>
            </div>
            <p ><%= link_to(render_highlight_content(record,@query_string),record_path(record)) %></p>

          </div>
        </div>
        <% end %>
      </div>
    </div>
    <div class="text-center">
      <%= will_paginate(@records, renderer: BootstrapPagination::Rails) %>
    </div>
  <% end %>
</div>
