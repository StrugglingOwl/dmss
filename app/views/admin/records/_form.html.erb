<%= simple_form_for @record do |f| %>
  <div class="form-record">
    <%= f.input :case_number, input_html: { class: "form-control"} %>
    <%= f.input :date, input_html: { class: "form-control"} %>
    <%= f.input :hospital, input_html: { class: "form-control"} %>
    <%= f.input :hospital_contact, input_html: { class: "form-control"} %>
    <%= f.input :telephone, input_html: { class: "form-control"} %>
    <%= f.input :room_id, input_html: { class: "form-control"} %>
    <%= f.input :device_name, input_html: { class: "form-control"} %>
    <%= f.input :device_model, input_html: { class: "form-control"} %>
    <%= f.input :serial_number, input_html: { class: "form-control"} %>
    <%= f.input :description, input_html: { class: "form-control"} %>
    <%= f.input :maintenance, input_html: { class: "form-control"} %>
    <%= f.input :result, input_html: { class: "form-control"} %>
    <%= f.input :remarks, input_html: { class: "form-control"} %>
    <%= f.input :service_engineer, input_html: { class: "form-control"} %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
<% end %>
